@page "/"
@namespace Munchkin.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Munchkin</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <script src="_content/MatBlazor/dist/matBlazor.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="_content/MatBlazor/dist/matBlazor.css" rel="stylesheet" />
    <link href="_content/blazor-dragdrop/dragdrop.css" rel="stylesheet" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>

    <script type="text/javascript">
        window.exampleJsFunctions = {
            focusElement: function (id) {
                const element = document.getElementById(id);
                element.focus();
            }
        }
    </script>

    <script type="text/javascript">
        window.jsFunctions = {
            updateLayout: function (classname) {
                var listItems = document.getElementsByClassName(classname);

                switch (listItems.length) {
                    case 1:
                        $(listItems[0]).css("transform", "rotate(" + 0 + "deg) translate(-50%, -100px) rotate(-" + 0 + "deg)");
                        break;
                    case 2:
                        $(listItems[0]).css("transform", "rotate(" + 292.5 + "deg) translate(-50%, -750px) rotate(-" + 292.5 + "deg)");
                        $(listItems[1]).css("transform", "rotate(" + 67.5 + "deg) translate(-50%, -700px) rotate(-" + 67.5 + "deg)");
                        break;
                    case 3:
                        $(listItems[0]).css("transform", "rotate(" + 270 + "deg) translate(-50%, -800px) rotate(-" + 270 + "deg)");
                        $(listItems[1]).css("transform", "rotate(" + 0 + "deg) translate(-50%, -100px) rotate(-" + 0 + "deg)");
                        $(listItems[2]).css("transform", "rotate(" + 90 + "deg) translate(-50%, -700px) rotate(-" + 90 + "deg)");
                        break;
                    case 4:
                        $(listItems[0]).css("transform", "rotate(" + 279 + "deg) translate(-50%, -800px) rotate(-" + 279 + "deg)");
                        $(listItems[1]).css("transform", "rotate(" + 333 + "deg) translate(-50%, -450px) rotate(-" + 333 + "deg)");
                        $(listItems[2]).css("transform", "rotate(" + 27 + "deg) translate(-50%, -100px) rotate(-" + 27 + "deg)");
                        $(listItems[3]).css("transform", "rotate(" + 81 + "deg) translate(-50%, -700px) rotate(-" + 81 + "deg)");
                        break;

                }

                //for (var i = 0; i < listItems.length; i++) {
                //    var offsetAngle = 360 / listItems.length;
                //    var rotateAngle = offsetAngle * i;
                //    $(listItems[i]).css("transform", "rotate(" + rotateAngle + "deg) translate(0, -400px) rotate(-" + rotateAngle + "deg)");
                //}
            }
        }
    </script>
</body>

</html>
